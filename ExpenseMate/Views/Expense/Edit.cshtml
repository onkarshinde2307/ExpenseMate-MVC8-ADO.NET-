@model ExpenseMate.Models.Expense
@{
    ViewData["Title"] = "Edit Expense";
}

<div class="container py-5" style="font-family: 'Segoe UI', sans-serif;">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold" style="color: #1b1b2f;">✏️ Edit Expense</h1>
        <p class="fst-italic" style="color: #3d3d5c;">"Track smart. Save smarter." — <strong>Onkar Shinde</strong></p>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-lg rounded-4 p-5 mx-auto border-start border-4 border-dark" style="max-width: 700px;">
        <form method="post">
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="ExpenseDate" class="form-label fw-semibold">📅 Date</label>
                    <input asp-for="ExpenseDate" type="date" class="form-control rounded-3" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="CategoryName" class="form-label fw-semibold">📂 Category</label>
                    <input asp-for="CategoryName" type="text" class="form-control rounded-3" required />
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label fw-semibold">📝 Description</label>
                    <input asp-for="Description" type="text" class="form-control rounded-3" placeholder="(optional)" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Amount" class="form-label fw-semibold">💰 Amount</label>
                    <input asp-for="Amount" type="number" step="0.01" class="form-control rounded-3" required />
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-5">
                <button type="submit" class="btn btn-gradient px-5 py-2 rounded-pill shadow-sm">💾 Save</button>
                <a asp-action="Index" class="btn btn-outline px-5 py-2 rounded-pill shadow-sm">❌ Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-label {
        color: #1b1b2f;
    }

    .form-control {
        border: 1px solid #ced4da;
        padding: 0.65rem 1rem;
        background-color: #f8f9fa;
        color: #1b1b2f;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #1b1b2f, #162447);
        color: #fff;
        border: none;
        transition: 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #0f0c29, #302b63);
        }

    .btn-outline {
        background-color: transparent;
        border: 2px solid #1b1b2f;
        color: #1b1b2f;
        transition: 0.3s ease;
    }

        .btn-outline:hover {
            background-color: #1b1b2f;
            color: white;
        }

    .rounded-4 {
        border-radius: 1.25rem !important;
    }

    h1 {
        font-size: 2.5rem;
    }
</style>
