@model ExpenseMate.Models.Income
@{
    ViewData["Title"] = "Add Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="font-family: 'Segoe UI', sans-serif;">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-success"><i class="bi bi-cash-stack"></i> Add Income</h2>
        <p class="text-muted fst-italic">“Record your income to manage your wealth better.”</p>
    </div>

    <div class="bg-white shadow rounded-4 p-5 mx-auto border-start border-4 border-success" style="max-width: 700px;">
        <form asp-action="Create" method="post">
            <div class="mb-4">
                <label asp-for="IncomeDate" class="form-label fw-semibold">📅 Date</label>
                <input asp-for="IncomeDate" type="date" class="form-control rounded-3" required id="incomeDate" />
                <span asp-validation-for="IncomeDate" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Source" class="form-label fw-semibold">📂 Source</label>
                <select asp-for="Source" id="sourceSelect" class="form-select rounded-3" required>
                    <option value="">-- Select or type Source --</option>
                    <option>Salary</option>
                    <option>Freelancing</option>
                    <option>Part-Time Job</option>
                    <option>Stock Dividends</option>
                    <option>Rental Income</option>
                    <option>Interest from Savings</option>
                    <option>Cashback/Rewards</option>
                    <option>Selling Old Items</option>
                    <option>Affiliate Earnings</option>
                    <option>Blog Monetization</option>
                    <option>YouTube Revenue</option>
                    <option>Gift Money</option>
                    <option>Tutoring</option>
                    <option>Online Course Sales</option>
                    <option>Investment Returns</option>
                    <option>Consulting Fees</option>
                    <option>Social Media Sponsorship</option>
                    <option>App Referral Bonus</option>
                    <option>Government Grant</option>
                    <option>Other Source</option>
                </select>
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>




            <div class="mb-4">
                <label asp-for="Amount" class="form-label fw-semibold">💰 Amount</label>
                <input asp-for="Amount" type="number" step="0.01" class="form-control rounded-3" required />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-5 rounded-pill">⬅️ Back</a>
                <button type="submit" class="btn btn-success px-5 rounded-pill">✔️ Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        // Disable future dates
        document.addEventListener("DOMContentLoaded", function () {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById("incomeDate").setAttribute("max", today);
        });

        // Enable Select2 with tagging for manual input
        $(document).ready(function () {
            $('#sourceSelect').select2({
                placeholder: "-- Select or type source --",
                tags: true,
                width: '100%',
                allowClear: true
            });
        });
    </script>
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

<style>
    .form-label {
        color: #2f7a2a;
    }

    .rounded-3 {
        border-radius: 0.75rem !important;
    }

    .btn-success {
        background: linear-gradient(135deg, #2f7a2a, #1c4b0c);
        border-color: #1c4b0c;
        box-shadow: 0 0.3rem 0.6rem rgba(44, 101, 25, 0.4);
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #1c4b0c, #2f7a2a);
            border-color: #144003;
            box-shadow: 0 0.3rem 1rem rgba(22, 51, 11, 0.7);
        }

    .btn-outline-secondary:hover {
        background-color: #e2e6ea;
    }
</style>
