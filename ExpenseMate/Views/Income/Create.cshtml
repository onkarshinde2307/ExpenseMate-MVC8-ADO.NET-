@model ExpenseMate.Models.Income
@{
    ViewData["Title"] = "Add Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="font-family: 'Segoe UI', sans-serif;">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-success"><i class="bi bi-cash-stack"></i> Add Income</h2>
        <p class="text-muted fst-italic">“Record your income to manage your wealth better.”</p>
    </div>

    <div class="bg-white shadow rounded-4 p-5 mx-auto border-start border-4 border-success" style="max-width: 700px;">
        <form asp-action="Create" method="post">
            <div class="mb-4">
                <label asp-for="IncomeDate" class="form-label fw-semibold">📅 Date</label>
                <input asp-for="IncomeDate" type="date" class="form-control rounded-3" required />
                <span asp-validation-for="IncomeDate" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Source" class="form-label fw-semibold">📂 Source</label>
                <input asp-for="Source" type="text" class="form-control rounded-3" placeholder="e.g. Family, Part-time job" required />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Amount" class="form-label fw-semibold">💰 Amount</label>
                <input asp-for="Amount" type="number" step="0.01" class="form-control rounded-3" required />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-5 rounded-pill">⬅️ Back</a>
                <button type="submit" class="btn btn-success px-5 rounded-pill">✔️ Save</button>
            </div>
        </form>
    </div>
</div>

<style>
    .form-label {
        color: #2f7a2a; /* Dark green */
    }

    .rounded-3 {
        border-radius: 0.75rem !important;
    }

    .btn-success {
        background: linear-gradient(135deg, #2f7a2a, #1c4b0c);
        border-color: #1c4b0c;
        box-shadow: 0 0.3rem 0.6rem rgba(44, 101, 25, 0.4);
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #1c4b0c, #2f7a2a);
            border-color: #144003;
            box-shadow: 0 0.3rem 1rem rgba(22, 51, 11, 0.7);
        }

    .btn-outline-secondary:hover {
        background-color: #e2e6ea;
    }
</style>
