@model List<ExpenseMate.Models.Income>
@{
    ViewData["Title"] = "Income Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold" style="color: #2f4858;">💰 @ViewData["Title"]</h2>
        <a class="btn rounded-pill px-4 text-white" style="background-color: #2f4858;" href="/Income/Create">
            <i class="bi bi-plus-circle me-1"></i> Add Income
        </a>
    </div>

    <!-- Data Table -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm rounded-3 overflow-hidden">
                <thead style="background-color: #e2f0d9;">
                    <tr class="text-dark text-center">
                        <th>📅 Date</th>
                        <th>🏷️ Source</th>
                        <th>💰 Amount (₹)</th>
                        <th class="text-end">⚙️ Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var income in Model)
                    {
                        <tr>
                            <td>@income.IncomeDate.ToString("dd MMM yyyy")</td>
                            <td>@income.Source</td>
                            <td>₹@income.Amount.ToString("N2")</td>
                            <td class="text-end">
                                <a href="/Income/Details/@income.Id" class="btn btn-sm btn-outline-info me-1" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/Income/Edit/@income.Id" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="/Income/Delete/@income.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm rounded-3">
            <i class="bi bi-info-circle me-2"></i> No income records found.
        </div>
    }
</div>

<style>
    body {
        background-color: #f4f7f6;
    }

    th, td {
        vertical-align: middle;
    }
</style>
