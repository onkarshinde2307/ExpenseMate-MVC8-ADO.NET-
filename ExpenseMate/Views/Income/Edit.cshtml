@model ExpenseMate.Models.Income
@{
    ViewData["Title"] = "Edit Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="bg-white p-4 rounded-4 shadow-sm border">
                <h3 class="mb-4 fw-semibold text-dark">
                    <i class="bi bi-pencil-square me-2 text-primary"></i> @ViewData["Title"]
                </h3>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="IncomeDate" class="form-label">Date</label>
                        <input asp-for="IncomeDate" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="IncomeDate" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Source" class="form-label">Source</label>
                        <input asp-for="Source" class="form-control" readonly />
                        <span asp-validation-for="Source" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label">Amount (₹)</label>
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Income/Index" class="btn btn-outline-dark px-4 rounded-pill">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn px-4 text-white rounded-pill" style="background-color: #2f4858;">
                            <i class="bi bi-save2 me-1"></i> Update
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
