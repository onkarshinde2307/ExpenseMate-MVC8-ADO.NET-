@model ExpenseMate.Models.Income
@{
    ViewData["Title"] = "Delete Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white border-0">
                    <h3 class="text-danger fw-semibold">
                        <i class="bi bi-trash-fill me-2"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger rounded-3">
                        <h5 class="mb-3">Are you sure you want to delete this income record?</h5>

                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">Date</dt>
                            <dd class="col-sm-8">@Model.IncomeDate.ToString("dd MMM yyyy")</dd>

                            <dt class="col-sm-4 text-muted">Source</dt>
                            <dd class="col-sm-8">@Model.Source</dd>

                            <dt class="col-sm-4 text-muted">Amount</dt>
                            <dd class="col-sm-8">₹@Model.Amount.ToString("N2")</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Income/Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-outline-danger px-4 rounded-pill">
                                <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
